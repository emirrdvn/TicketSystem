{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ticketsystem;User=root;"
  },
  "JwtSettings": {
    "Secret": "TicketSystem-Super-Secret-Key-32Characters-Long-2025",
    "Issuer": "TicketSystemAPI",
    "Audience": "TicketSystemClient",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@ticketsystem.com",
    "FromName": "Ticket System"
  },
  "FileStorage": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".jpg", ".png", ".pdf", ".docx", ".xlsx"],
    "UploadPath": "wwwroot/uploads"
  }
}
